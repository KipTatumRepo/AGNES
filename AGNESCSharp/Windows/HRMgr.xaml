<Window x:Class="AGNESCSharp.HRMgr"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AGNESCSharp"
        mc:Ignorable="d"
        Title="HR Associate Manager" Height="600" Width="965" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="44*"/>
            <RowDefinition Height="499*"/>
            <RowDefinition Height="28*"/>
        </Grid.RowDefinitions>
        <ToolBar x:Name="tlbHRMgr" Grid.Row="0" HorizontalAlignment="Left" Height="41" VerticalAlignment="Top" Width="954" >
            <Button x:Name="SearchButton" Height="34" Width="49" VerticalAlignment="Top" Margin="0,0,0,2" ToolTip="Search" Click="SearchButton_Click" >
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Image Source="/AGNESCSharp;component/Resources/magglass.png" Stretch="Fill"/>
                </StackPanel>
            </Button>
            <Separator/>
            <ComboBox x:Name="cbxCostCenters" Height="36" VerticalAlignment="Top" Width="202" SelectionChanged="CostCenterChosen"/>
            <Separator/>
            <ToggleButton x:Name="LeaveButton" Height="34" Width="49" VerticalAlignment="Top" Margin="0,0,0,2" ToolTip="Enter Leave" Checked="LeaveButton_Checked" Unchecked="LeaveButton_Checked">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                    <Image Source="/AGNESCSharp;component/Resources/BabyCarriage.png" Stretch="Fill" />
                </StackPanel>
            </ToggleButton>
            <Separator/>
            <ToggleButton x:Name="OccButton" Height="34" Width="49" VerticalAlignment="Top" Margin="0,0,0,2" ToolTip="Enter Occurrence" Checked="OccButton_Checked" Unchecked="OccButton_Checked" >
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Image Source="/AGNESCSharp;component/Resources/Occurrence.png" Stretch="Fill" />
                </StackPanel>
            </ToggleButton>
            <Separator/>
            <ToggleButton x:Name="CashHandleButton" Height="34" Width="49" VerticalAlignment="Top" Margin="0,0,0,2" ToolTip="Enter Cash Handling" Checked="CashHandleButton_Checked" Unchecked="CashHandleButton_Checked" >
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Image Source="/AGNESCSharp;component/Resources/dollarsignb.png" Stretch="Fill"/>
                </StackPanel>
            </ToggleButton>
            <Separator/>

        </ToolBar>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="290*"/>
                <ColumnDefinition Width="669*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="25*"/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="tbAssociates" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" Margin="96,10,78,9" TextWrapping="Wrap" Text="Associates" VerticalAlignment="Center" FontSize="24" FontWeight="Bold" Height="34" TextAlignment="Center" Width="116" />
            <local:UnselectableListBox x:Name ="lbxAssociates" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Stretch" Margin="2,2,2,2" VerticalAlignment="Stretch"/>
            <TextBlock x:Name="tbHistory" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" Margin="266,10,251,9" TextWrapping="Wrap" Text="Event History" VerticalAlignment="Center" FontSize="24" FontWeight="Bold" Height="34" TextAlignment="Center" Width="152" />
            <StackPanel x:Name="lbxHistory" HorizontalAlignment="Stretch" Margin="2,2,2,2" VerticalAlignment="Stretch" Visibility="Visible" Grid.Column="1" Grid.Row="1">
                <StackPanel x:Name="OccStackPanel" Visibility="Collapsed">
                    <TextBlock Text="Occurrence Related Violations" TextAlignment="Center" Margin="0,0,0,2"/>
                    <ScrollViewer x:Name="OccurrenceSV" HorizontalAlignment="Stretch" Margin="0,0,0,10" VerticalScrollBarVisibility="Auto" Visibility="Visible">
                        <DataGrid x:Name="OccurrenceDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" SelectionUnit="FullRow" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,5">
                            <DataGrid.Resources>
                                <local:IntToStringConverter x:Key="MyConverter"/>
                            </DataGrid.Resources>
                            <DataGrid.Columns>
                                <DataGridTextColumn x:Name="PID" Header="PID" Binding="{Binding PID, Mode=OneWay}" />
                                <DataGridTextColumn x:Name="AssociateNumber" Header="Asc Number" Binding="{Binding PersNumber, Mode=OneWay}"/>
                                <DataGridTextColumn x:Name="OccurrenceType" Header="Occ Type" Binding="{Binding Type, Mode=OneWay, Converter={StaticResource MyConverter}}"/>
                                <DataGridTextColumn x:Name="Date" Header="Occ Date" Binding="{Binding Date, StringFormat=\{0:MM/dd/yy\}, Mode=OneWay}" />
                                <DataGridTextColumn x:Name="AttViolation" Header="Att Violation Type" Binding="{Binding AttendanceViolation, Mode=OneWay}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextWrapping" Value="Wrap"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn x:Name="Notes" Header="Notes" Binding="{Binding Notes, Mode=OneWay}" Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextWrapping" Value="Wrap"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </ScrollViewer>
                </StackPanel>
                <StackPanel x:Name="LOAStackPanel" Visibility="Collapsed">
                    <TextBlock Text="Leave of Absences" TextAlignment="Center" Margin="0,0,0,2"/>
                    <ScrollViewer x:Name="LoaSV" HorizontalAlignment="Stretch" Margin="0,0,0,10" VerticalScrollBarVisibility="Auto" Visibility="Visible">
                        <DataGrid x:Name="LoaDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" SelectionUnit="FullRow" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,5">
                            <DataGrid.Columns>
                                <DataGridTextColumn x:Name="LoaPID" Header="PID" Binding="{Binding PID, Mode=OneWay}" />
                                <DataGridTextColumn x:Name="LoaAssociateNumber" Header="Asc Number" Binding="{Binding PersNumber, Mode=OneWay}"/>
                                <DataGridTextColumn x:Name="LoaOccurrenceType" Header="LOA Type" Binding="{Binding Type, Mode=OneWay}"/>
                                <DataGridTextColumn x:Name="LoaBeginDate" Header="Start Date" Binding="{Binding DateStart, StringFormat=\{0:MM/dd/yy\}, Mode=OneWay}" />
                                <DataGridTextColumn x:Name="LoaEndDate" Header="End Date" Binding="{Binding DateEnd, StringFormat=\{0:MM/dd/yy\}, Mode=OneWay}" />
                                <DataGridTextColumn x:Name="LoaNotes" Header="Notes" Binding="{Binding Notes, Mode=OneWay}" Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextWrapping" Value="Wrap"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </ScrollViewer>
                </StackPanel>
                <StackPanel x:Name="CashHandleStackPanel" Visibility="Collapsed">
                    <TextBlock Text="Cash Handling Violations" TextAlignment="Center" Margin="0,0,0,2"/>
                    <ScrollViewer x:Name="CashHandleSV" HorizontalAlignment="Stretch" Margin="0,0,0,10" VerticalScrollBarVisibility="Auto" Visibility="Visible">
                        <DataGrid x:Name="CashHandleDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" SelectionUnit="FullRow" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,5">
                            <DataGrid.Resources>
                                <local:CHIntToStringConverter x:Key="CashHandleConverter"/>
                            </DataGrid.Resources>
                            <DataGrid.Columns>
                                <DataGridTextColumn x:Name="CHPID" Header="PID" Binding="{Binding PID, Mode=OneWay}" />
                                <DataGridTextColumn x:Name="CHAssociateNumber" Header="Asc Number" Binding="{Binding PersNumber, Mode=OneWay}"/>
                                <DataGridTextColumn x:Name="CHOccurrenceType" Header="Occ Type" Binding="{Binding Type, Mode=OneWay, Converter={StaticResource CashHandleConverter}}"/>
                                <DataGridTextColumn x:Name="CHDate" Header="Occ Date" Binding="{Binding Date, StringFormat=\{0:MM/dd/yy\}, Mode=OneWay}" />
                                <DataGridTextColumn x:Name="CHNotes" Header="Notes" Binding="{Binding Notes, Mode=OneWay}" Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextWrapping" Value="Wrap"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </ScrollViewer>
                </StackPanel>
            </StackPanel>
        </Grid>
        <StatusBar x:Name="sbHRMgr" HorizontalAlignment="Left" Height="27" VerticalAlignment="Top" Width="954" Grid.Row="2"/>
    </Grid>
</Window>
