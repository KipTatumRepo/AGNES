<Window x:Class="BGCRM"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AGNES"
        mc:Ignorable="d"
        Title="Business Group Customer Relationship Manager" Height="680" Width="1024   " WindowState="Maximized" WindowStartupLocation="CenterScreen">
    <Window.Effect>
        <DropShadowEffect Opacity="0.75"/>
    </Window.Effect>
    <Grid >
        <DockPanel>
            <TabControl>
                <TabItem x:Name="tiGroup" Header="Group Details">
                    <TabItem.Background>
                        <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                            <GradientStop Color="#FFF0F0F0" Offset="0"/>
                            <GradientStop Color="#FFBBA2A2" Offset="1"/>
                        </LinearGradientBrush>
                    </TabItem.Background>
                    <Grid x:Name="grdGroup" Background="#FFE5E5E5" Margin="0,-1,0,1">
                        <TextBlock Margin="10,27,0,0" TextWrapping="Wrap" Text="Business group name" VerticalAlignment="Top" FontSize="24" HorizontalAlignment="Left" Width="243"/>
                        <TextBlock Margin="10,64,0,0" TextWrapping="Wrap" Text="Group Overview" VerticalAlignment="Top" FontSize="24" HorizontalAlignment="Left" Width="243"/>
                        <TextBlock Margin="10,146,0,0" TextWrapping="Wrap" Text="Headcount" VerticalAlignment="Top" FontSize="24" HorizontalAlignment="Left" Width="130"/>
                        <TextBlock Margin="279,146,0,0" TextWrapping="Wrap" Text="Work Times" VerticalAlignment="Top" FontSize="24" HorizontalAlignment="Left" Width="135"/>
                        <TextBlock Margin="633,147,0,0" TextWrapping="Wrap" Text="Workspace Type" VerticalAlignment="Top" FontSize="24" HorizontalAlignment="Left" Width="184"/>
                        <TextBlock HorizontalAlignment="Left" Margin="10,257,0,0" TextWrapping="Wrap" Text="Communications" VerticalAlignment="Top" FontSize="24" Width="352" TextAlignment="Center"/>
                        <TextBlock Margin="414,257,0,0" TextWrapping="Wrap" Text="Culture" VerticalAlignment="Top" FontSize="24" HorizontalAlignment="Left" Width="253" TextAlignment="Center"/>
                        <TextBlock Margin="718,257,0,0" TextWrapping="Wrap" Text="Locations" VerticalAlignment="Top" FontSize="24" HorizontalAlignment="Left" Width="282" TextAlignment="Center"/>
                        <ComboBox x:Name="cboGroup" Margin="264,30,0,0" VerticalAlignment="Top" FontSize="18" TabIndex="1" HorizontalAlignment="Left" Width="700"/>
                        <Button x:Name="btnAddGroup" Content="+" Margin="969,29,0,0" VerticalAlignment="Top" FontSize="20" HorizontalAlignment="Left" Width="31">
                            <Button.Effect>
                                <DropShadowEffect ShadowDepth="3" Color="#FFBBB2B2"/>
                            </Button.Effect>
                        </Button>
                        <ComboBox x:Name="cboWorkTimes" Margin="419,148,0,0" VerticalAlignment="Top" FontSize="18" TabIndex="4" HorizontalAlignment="Left" Width="192"/>
                        <ComboBox x:Name="cboWorkspace" Margin="822,149,0,0" VerticalAlignment="Top" FontSize="18" TabIndex="5" HorizontalAlignment="Left" Width="142"/>
                        <TextBox x:Name="txtOverview" Height="68" Margin="264,73,0,0" TextWrapping="Wrap" VerticalAlignment="Top" MaxLines="6" MaxLength="4000" IsUndoEnabled="True" TabIndex="2" HorizontalAlignment="Left" Width="700"/>
                        <TextBox x:Name="txtHeadcount" Height="31" Margin="145,147,0,0" VerticalAlignment="Top" MaxLines="1" MaxLength="8" TabIndex="3" HorizontalAlignment="Left" Width="108"/>
                        <Separator Height="39" Margin="0,193,0,0" VerticalAlignment="Top"/>
                        <ListView x:Name="lbxCommSelect" Height="94" Margin="10,294,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="352" TabIndex="6">
                            <ListView.View>
                                <GridView>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <ListView x:Name="lbxCommsChosen" Height="138" Margin="10,393,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="352">
                            <ListView.View>
                                <GridView>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <ListView x:Name="lbxCultureSelect" Height="94" Margin="414,294,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="253" TabIndex="7">
                            <ListView.View>
                                <GridView/>
                            </ListView.View>
                        </ListView>
                        <ListView x:Name="lbxCultureChosen" Height="138" Margin="414,393,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="253">
                            <ListView.View>
                                <GridView/>
                            </ListView.View>
                        </ListView>
                        <ListView x:Name="lbxLocationsSelect" Height="94" Margin="718,294,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="282" TabIndex="8">
                            <ListView.View>
                                <GridView/>
                            </ListView.View>
                        </ListView>
                        <ListView x:Name="lbxLocationsChosen" Height="138" Margin="718,393,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="282">
                            <ListView.View>
                                <GridView/>
                            </ListView.View>
                        </ListView>
                        <Button x:Name="btnSaveNext" Content="Save" HorizontalAlignment="Left" Margin="491,571,0,0" VerticalAlignment="Top" Width="75" FontSize="24">
                            <Button.Effect>
                                <DropShadowEffect ShadowDepth="3" Color="#FFBBB2B2"/>
                            </Button.Effect>
                        </Button>
                    </Grid>
                </TabItem>
                <TabItem x:Name="tiPeople" Header="People">
                    <TabItem.Background>
                        <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                            <GradientStop Color="#FFF0F0F0" Offset="0"/>
                            <GradientStop Color="#FFBBA2A2" Offset="1"/>
                        </LinearGradientBrush>
                    </TabItem.Background>
                    <Grid x:Name="grdPeople" Background="#FFE5E5E5">
                    </Grid>
                </TabItem>
                <TabItem x:Name="tiFinances" Header="Financials">
                    <TabItem.Background>
                        <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                            <GradientStop Color="#FFF0F0F0" Offset="0"/>
                            <GradientStop Color="#FFBBA2A2" Offset="1"/>
                        </LinearGradientBrush>
                    </TabItem.Background>
                    <Grid x:Name="grdFinances" Background="#FFE5E5E5">
                    </Grid>
                </TabItem>
                <TabItem x:Name="tiEvents" Header="Events">
                    <TabItem.Background>
                        <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                            <GradientStop Color="#FFF0F0F0" Offset="0"/>
                            <GradientStop Color="#FFBBA2A2" Offset="1"/>
                        </LinearGradientBrush>
                    </TabItem.Background>
                    <Grid x:Name="grdEvents" Background="#FFE5E5E5">
                    </Grid>
                </TabItem>
                <TabItem x:Name="tiCampusRefresh" Header="Campus Refresh">
                    <TabItem.Background>
                        <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                            <GradientStop Color="#FFF0F0F0" Offset="0"/>
                            <GradientStop Color="#FFBBA2A2" Offset="1"/>
                        </LinearGradientBrush>
                    </TabItem.Background>
                    <Grid x:Name="grdCampusRefresh" Background="#FFE5E5E5">
                    </Grid>
                </TabItem>
            </TabControl>
        </DockPanel>
    </Grid>
</Window>
