<UserControl x:Class="YesNoSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AGNES"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="80">
    <Grid>
        <TextBlock Text="YES" FontSize="18" TextAlignment="Center" HorizontalAlignment="Left" Width="40" Background="#FFA0FF97"/>
        <TextBlock Text="NO" FontSize="18" TextAlignment="Center" HorizontalAlignment="Left" Width="40" Margin="40,0,0,0" Background="#FFFF5959"/>
        <Border x:Name="brdSlider" HorizontalAlignment="Left" Width="40" BorderBrush="Black" BorderThickness="1,1,1,1" Margin="0,0,0,0">
            <Border.Background>
                <RadialGradientBrush>
                    <GradientStop Color="#FF1D5CE4" Offset="3"/>
                    <GradientStop Color="White"/>
                </RadialGradientBrush>
            </Border.Background>
        </Border>
    </Grid>
</UserControl>
