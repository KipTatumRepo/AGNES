<Window x:Class="WCRHello"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AGNES"
        mc:Ignorable="d"
        Title="WCRHello" Height="450" Width="800" WindowStyle="None" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Viewbox>
        <Grid>
            <Image x:Name="imgAGNES" HorizontalAlignment="Left" Height="432" VerticalAlignment="Top" Width="261" Source="Resources/Full Agnes Image.png" Margin="0,10,0,0"/>
            <TextBlock x:Name="tbHello" HorizontalAlignment="Left" Margin="274,20,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" FontSize="30" Height="320" Width="499" TextAlignment="Center"/>
            <Button x:Name="btnViewWCR" Content="I want to view a saved WCR" HorizontalAlignment="Left" Margin="305,359,0,0" VerticalAlignment="Top" Width="181" Height="37" TabIndex="0"/>
            <Button x:Name="btnCreateWCR" Content="I want to create a new WCR" HorizontalAlignment="Left" Margin="557,359,0,0" VerticalAlignment="Top" Width="181" Height="37" TabIndex="1"/>
        </Grid>
    </Viewbox>
</Window>
