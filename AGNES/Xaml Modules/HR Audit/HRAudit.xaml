<Window x:Class="HRAudit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AGNES"
        mc:Ignorable="d"
        Title="HRAudit" Height="450" Width="800">
    <Grid>
        <Grid HorizontalAlignment="Left" Height="32" Margin="307,167,0,0" VerticalAlignment="Top" Width="128">
            <Rectangle Fill="#FFFD092A" Opacity="0.5">
                <Rectangle.Effect>
                    <BlurEffect Radius="10    "/>
                </Rectangle.Effect>
            </Rectangle>
            <TextBox HorizontalAlignment="Left" Height="24" Margin="4,4,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" BorderBrush="{x:Null}"/>

        </Grid>

    </Grid>
</Window>
